<div class="grid">
    <div class="row">
        {% for event in events %}
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                <div class="txthover">
                    <img src="{{ event.image ? '/uploads/images/' ~ event.image : '/images/default_list.png' }}" alt="{{ event.title }}">
                    <div class="txtcontent">
                        <div class="stars">
                            <h3 class="name">{{ event.title }}</h3>
                        </div>
                        <div class="simpletxt">
                            <p>
                                {{ event.city }}
                                <br>
                                {{ event.address }}
                                <br>
                                {{ event.getDate|date('Y-m-d H:i:s') }}
                            </p>
                            <h4 class="price">{{ event.category }}</h4>
                            <button onclick="window.location='{{ path('viewEvent', {'id': event.id}) }}'">
                                {{ 'list.more'|trans }}
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>