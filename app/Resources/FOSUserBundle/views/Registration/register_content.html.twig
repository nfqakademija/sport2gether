{% trans_default_domain 'FOSUserBundle' %}
    <div class="col-sm-offset-3">
        <h2>Fill Registration Form</h2>
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register '}}) }}

                <div class="form-group row">
                    {{ form_label(form.username,null, {'label_attr':{'class':'col-sm-2 col-form_label'}}) }}
                    {{ form_widget(form.username, {'attr':{'class':'form_control'}}) }}
                    {{ form_errors(form.username) }}
                </div>
                <div class="form-group row">
                    {{ form_label(form.email,null, {'label_attr':{'class':'col-sm-2 col-form_label'}}) }}
                    {{ form_widget(form.email, {'attr':{'class':'form_control'}}) }}
                    {{ form_errors(form.email) }}
                </div>
                <div class="form-group row">
                    {{ form_label(form.plainPassword.first,null, {'label_attr':{'class':'col-sm-2 col-form_label'}}) }}
                    {{ form_widget(form.plainPassword.first, {'attr':{'class':'form_control'}}) }}
                    {{ form_errors(form.plainPassword.first) }}
                </div>
                <div class="form-group row">
                    {{ form_label(form.plainPassword.second,null, {'label_attr':{'class':'col-sm-2 col-form_label '}}) }}
                    {{ form_widget(form.plainPassword.second, {'attr':{'class':'form_control'}}) }}
                    {{ form_errors(form.plainPassword.second) }}
                </div>
            <div>
                <input type="submit" class="btn btn-success" value="{{ 'registration.submit'|trans }}" />
            </div>
        {{ form_end(form) }}
    </div>
