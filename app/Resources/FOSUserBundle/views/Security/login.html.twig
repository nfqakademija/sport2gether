{% extends  app.request.get('_route') == 'fos_user_security_login' ? 'auth_layout.html.twig' : "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div>
        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <div class="form-group">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"  placeholder="{{ 'user.username'|trans }}">
            </div>
            <div class="form-group">
                <input type="password" id="password" name="_password" required="required" class="form-control"  placeholder="{{ 'user.password'|trans }}">
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-default btn-lg btn-block btn-block--medium" id="_submit" name="_submit">{{ 'user.login'|trans }}</button>
            </div>
        </form>
    </div>
{% endblock fos_user_content %}




