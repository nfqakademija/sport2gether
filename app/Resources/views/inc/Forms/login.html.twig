<!-- Modal -->
<div class="modal fade modal--centered" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-dialog--medium" role="document">
        <div class="modal-content modal-content--noBorder ">
            <div class="modal-header modal-header--noBorder">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title modal-title--big" id="myModalLabel">{{ 'user.login'|trans}}</h4>
            </div>
            <div class="modal-body">
                {{ render(controller(
                'FOSUserBundle:Security:login'
                )) }}
            </div>
         </div>
     </div>
 </div>

