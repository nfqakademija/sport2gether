<div class="allcontain">
    <div class="header">
        <div class="container">
            <div class="row">
                    <ul class="socialicon col-xs-4">
                        <li><a target="_blank" href="https://www.facebook.com/Sport2gether-1891646464413478/"><i class="fa fa-facebook"></i></a></li>
                    </ul>
                <ul class="givusacall col-xs-4">
                    <li>{{ 'user.callus'|trans }} : +370 670 56040 </li>
                </ul>
                <ul class="logreg col-xs-4">
                    {% if is_granted('ROLE_USER') %}
                        <li><a href="{{ path('fos_user_security_logout') }}">{{ 'user.logout'|trans }}</a> </li>
                        {% if is_granted('ROLE_COACH') %}
                            <li><a href="{{ path('coach_edit') }}">{{ 'user.coachEdit'|trans }}</a> </li>
                        {% endif %}
                    {% else %}
                        <li><a href="#" data-toggle="modal" data-target="#registerModal">{{ 'user.register'|trans }} </a> </li>
                        <li><a href="#" data-toggle="modal" data-target="#loginModal">{{ 'user.login'|trans }} </a> </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
    <!-- Navbar Up -->
    {% if is_granted('ROLE_USER') %}
    <nav class="topnavbar navbar-default topnav">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed toggle-costume" data-toggle="collapse" data-target="#upmenu" aria-expanded="false">
                    <span class="sr-only"> Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
        </div>
        <div class="container transparent-header">
            <div class="collapse navbar-collapse" id="upmenu">
                <div class="row">
                    <div class="col-sm-3 col-sm-offset-1">
                        <a href="#" class="header-link"><h2 class="header-logo header-logo--white">Sport2gether</h2></a></div>
                    <div class="col-sm-6 col-sm-offset-2">
                        <ul class="nav navbar-nav" id="navbarontop">
                            {% if is_granted('ROLE_USER') %}
                            <li>
                                <a class="myEventLink myEventLink--white"
                                   href=
                                   {% if is_granted('ROLE_COACH') %}
                                    "{{ path('coachEvents') }}">
                                     {% else %}
                                      "{{ path('myEvents') }}" >
                                    {% endif %}
                                    {{ 'user.events'|trans }}</a>
                            </li>
                            {% if is_granted('ROLE_COACH') %}
                                <li>
                                    <a class="myEventLink myEventLink--white" href="{{ path('create_event') }}">{{ 'user.createEvent'|trans }}</a>
                                </li>
                            {% endif %}
                        </ul>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </nav>
    {% endif %}
</div>

{% include("inc/Forms/login.html.twig") %}
